{
  "compilerOptions": {
    "outDir": "./build/",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "jsx": "react",
    "allowJs": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "lib": [
      "es6",
      "dom",
      "es2017",
      "es2018.promise",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*",
    "./typings/index.d.ts",
    "node_modules/exscudo-ui/src/**/*"
  ],
  "exclude": [
    "./src/**/__tests__/*",
    "node_modules/exscudo-ui/src/**/__tests__/*"
  ]
}
